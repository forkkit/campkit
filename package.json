{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna bootstrap",
    "makelive": "lerna publish",
    "list": "lerna ls",
    "clean": "lerna clean",
    "postinstall": "lerna bootstrap",
    "format": "prettier  --config .prettierrc --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "dev:start": "lerna exec --parallel -- yarn start",
    "dev:lint": "lerna exec --parallel -- yarn lint",
    "dev:build": "lerna exec --parallel -- yarn build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "lerna": "3.16.4",
    "lerna-changelog": "0.8.2",
    "prettier": "1.18.2"
  }
}
