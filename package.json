{
  "name": "campkit",
  "version": "1.0.0",
  "description": "Build serverless Node.js microservices fast",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/getcampsite/campkit.git"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "format": "prettier  --config .prettierrc --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
    "start": "lerna exec --parallel -- yarn start",
    "lint": "lerna exec --parallel -- yarn lint",
    "build": "lerna exec --parallel -- yarn build",
    "makelive": "lerna publish",
    "list": "lerna ls",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "lerna": "3.16.4",
    "prettier": "1.18.2"
  }
}
